<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.rodionov.unimusic">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".songFocus"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <service
            android:name=".mediaPlayerService"
            android:enabled="true" />

        <receiver android:name=".mediaPlayerService$Receiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="ua.rodionov.unimusic.ACTION_PLAY" />
            </intent-filter>
            <intent-filter>
                <action android:name="ua.rodionov.unimusic.ACTION_PREVIOUS" />
            </intent-filter>
            <intent-filter>
                <action android:name="ua.rodionov.unimusic.ACTION_NEXT" />
            </intent-filter>
        </receiver>
    </application>

</manifest>